{
  "name": "cxengage-configuration-ui",
  "version": "0.31.3",
  "description": "CxEngage Configuration and Reporting",
  "repository": {
    "type": "git",
    "url": "https://github.com/SerenovaLLC/cxengage-configuration-ui"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write --print-width 120",
      "git add"
    ]
  },
  "publishConfig": {
    "registry": "http://nexus.cxengagelabs.net/content/repositories/npm-internal/"
  },
  "scripts": {
    "start": "webpack-dev-server --port 3000 --mode development",
    "preinstall": "node ./resources/npmcheckversion",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "profile": "webpack --profile --json > stats.json",
    "test": "node scripts/test.js --env=jsdom",
    "test:coverage": "npm run test -- --coverage",
    "test:auto": "node ./node_modules/cx-automation-utils | wdio ./automation/wdio.conf.js --suite \"inProgress\"",
    "test:all": "wdio ./automation/wdio.conf.js --suite \"inProgress\"",
    "lint": "eslint src/",
    "precommit": "npm run lint && lint-staged && npm run test:coverage"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 57,
        "lines": 61,
        "statements": 61
      }
    },
    "collectCoverageFrom": [
      "src/containers/**/*.{js}",
      "src/components/**/*.{js}",
      "src/redux/modules/**/*.{js}",
      "src/utils/*.{js}",
      "!src/utils/cxSdk.js"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/browserMocks.js",
      "<rootDir>/config/polyfills.js",
      "<rootDir>/config/enzymeConfig.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "transform": {
      ".+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      ".+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!cx-ui-components).+(js|jsx)$"
    ],
    "moduleNameMapper": {
      "TestUtils": "<rootDir>/src/utils/testUtils.js",
      "react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "babel": {
    "presets": [
      "react",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread",
      "syntax-dynamic-import"
    ]
  },
  "author": "SerenovaLLC",
  "license": "UNLICENSED",
  "engines": {
    "node": "8.11.3",
    "npm": "5.6.0"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "babel-plugin-syntax-dynamic-import": "6.18.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.11",
    "cx-automation-utils": "^1.0.9",
    "cx-ui-components": "^0.28.1",
    "draft-js": "^0.10.5",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.3",
    "eslint": "4.16.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.42.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.6.0",
    "html-webpack-plugin": "3.0.7",
    "husky": "0.14.3",
    "immutable": "3.8.2",
    "jest": "22.4.3",
    "jest-junit": "^5.1.0",
    "lint-staged": "6.1.0",
    "moment": "2.22.0",
    "postcss-loader": "2.1.3",
    "prettier": "1.10.2",
    "prop-types": "15.6.1",
    "react": "16.2.0",
    "react-beautiful-dnd": "^9.0.2",
    "react-color": "^2.14.1",
    "react-copy-to-clipboard": "5.0.1",
    "react-dom": "16.2.0",
    "react-intl": "2.4.0",
    "react-moment": "0.7.0",
    "react-redux": "5.0.7",
    "react-router-dom": "4.2.2",
    "react-table": "6.7.6",
    "react-test-renderer": "16.2.0",
    "redux": "3.7.2",
    "redux-devtools-extension": "^2.13.5",
    "redux-form": "7.2.3",
    "redux-immutable": "4.0.0",
    "redux-observable": "0.18.0",
    "reselect": "3.0.1",
    "rxjs": "5.5.7",
    "sanitize.css": "^7.0.1",
    "serenova-js-utils": "^1.3.1",
    "style-loader": "0.20.3",
    "styled-components": "3.1.4",
    "url-loader": "1.0.1",
    "wdio-jasmine-framework": "^0.3.6",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^4.13.2",
    "webpack": "4.2.0",
    "webpack-bundle-analyzer": "2.11.1",
    "webpack-cli": "2.0.13",
    "webpack-dev-server": "3.1.1"
  }
}
